<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@color/gold_yellow">
            <RelativeLayout
                android:layout_marginLeft="6dp"
                android:layout_width="41dp"
                android:layout_height="41dp"
                android:layout_gravity="center"
                android:background="@drawable/tab_main_head_small"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true">
                <ImageView
                    android:id="@+id/order_imghead"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@mipmap/ohi"
                    android:layout_centerInParent="true" />
            </RelativeLayout>
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:layout_centerInParent="true">
                <TextView
                    android:id="@+id/order_will"
                    android:padding="6dp"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:gravity="center"
                    android:textSize="12sp"
                    android:text="未完成"
                    android:textColor="@color/gold_yellow"
                    android:background="@drawable/reward_wallet_top_bg_normal2"/>
                <TextView
                    android:textColor="@color/white"
                    android:id="@+id/order_done"
                    android:padding="6dp"
                    android:gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="12sp"
                    android:text="已完成"
                    android:background="@drawable/reward_wallet_top_bg_press"/>
            </LinearLayout>
            <ImageView
                android:id="@+id/wurewardwallet_add"
                android:paddingRight="6dp"
                android:layout_width="30dp"
                android:layout_height="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:src="@mipmap/header_btn_add_nor"/>
        </RelativeLayout>
    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/main_refresh"
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recycle_order"
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </android.support.v4.widget.SwipeRefreshLayout>
</LinearLayout>